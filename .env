# WPIC 图床后端配置示例
# 复制此文件为 .env 并修改相应配置

# 应用配置
APP_TITLE="WPIC 图床后端"
APP_DESCRIPTION="一个功能完整的图床后端服务"
APP_VERSION="1.0.0"
APP_HOST="0.0.0.0"
APP_PORT=8000
APP_DEBUG=false

# 文件上传配置
APP_MAX_FILE_SIZE=10485760  # 10MB
APP_AUTO_RENAME=true

# 数据库配置
# SQLite (默认)
DB_DATABASE_URL="sqlite:///./wpic.db"

# PostgreSQL
# DB_DATABASE_URL="postgresql://username:password@localhost:5432/wpic"

# MySQL
# DB_DATABASE_URL="mysql://username:password@localhost:3306/wpic"

# Redis配置
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DB=0

# 安全配置
SECURITY_SECRET_KEY="your-secret-key-change-this-in-production-32-chars-long"
SECURITY_ALGORITHM="HS256"
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY_ENABLE_AUTH=true

# 本地存储配置
STORAGE_LOCAL_BASE_PATH="./uploads"

# S3存储配置
STORAGE_S3_ACCESS_KEY=""
STORAGE_S3_SECRET_KEY=""
STORAGE_S3_BUCKET=""
STORAGE_S3_REGION="us-east-1"
STORAGE_S3_ENDPOINT=""  # 可选，用于兼容S3的服务

# WebDAV存储配置
STORAGE_WEBDAV_URL=""
STORAGE_WEBDAV_USERNAME=""
STORAGE_WEBDAV_PASSWORD=""
